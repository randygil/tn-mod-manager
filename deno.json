{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "run": "deno run --allow-write --allow-read --allow-net main.ts",
    "build-windows": "deno compile --allow-all --target x86_64-pc-windows-msvc --output mod-manager.exe main.ts",
    "build-linux": "deno compile --allow-all --target x86_64-unknown-linux-gnu --output mod-manager main.ts",
    "build-macos": "deno compile --allow-all --target aarch64-apple-darwin --output mod-manager main.ts",
    "build-all": "deno task build-windows && deno task build-linux && deno task build-macos",
    "test": "deno test --allow-all",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check main.ts",
    "clean": "rm -f mod-manager mod-manager.exe release-* && rm -rf release-v*",
    "validate": "deno task lint && deno task check && deno task test",
    "release-local": "scripts\\create-release.bat",
    "info": "deno info main.ts",
    "deps": "deno info --json main.ts | jq '.modules[] | select(.specifier | startswith(\"https://\")) | .specifier'",
    "setup": "echo 'ðŸ¦• Deno project setup complete! Run: deno task dev'"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/semver": "jsr:@std/semver@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0"
  },
  "compilerOptions": {
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    },
    "exclude": [
      "release-*",
      "*.min.js"
    ]
  }
}